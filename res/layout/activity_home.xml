<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent" android:layout_width="match_parent"
	android:background="@drawable/gradient_background_vert"
	android:orientation="vertical">
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_margin="4dip" android:background="@drawable/gradient_background_horiz">



	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:orientation="vertical" android:layout_margin="4dip"
		android:layout_height="wrap_content" android:layout_gravity="center_vertical|center_horizontal"
		android:background="@drawable/gradient_background_horiz">


		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:layout_margin="4dip" android:background="@color/background_transparent_darken">
			<Button style="@style/HomeButton" android:id="@+id/home_btn_sleep"
				android:onClick="onSleepClick" android:drawableTop="@drawable/home_btn_sleep"
				android:text="@string/title_sleep" />
			<Button android:id="@+id/home_btn_history" style="@style/HomeButton"
				android:onClick="onHistoryClick" android:text="@string/title_history"
				android:drawableTop="@drawable/home_btn_history" />
		</LinearLayout>



		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:layout_margin="4dip" android:background="@color/background_transparent_darken">
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/sleepMovementChart"
				android:layout_weight="1" android:orientation="horizontal"
				android:layout_margin="4dip" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>