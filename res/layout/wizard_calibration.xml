<?xml version="1.0" encoding="utf-8"?>
<com.androsz.electricsleep.widget.ViewFlipperBugfix xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wizardViewFlipper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/TextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/calibrate_title_welcome" >
            </TextView>

            <TextView
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calibrate_description_welcome" >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/TextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/calibrate_title_placement" >
            </TextView>

            <TextView
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calibrate_description_placement" >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/alarmTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/TextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/calibrate_title_alarm" >
            </TextView>

            <TextView
                style="@style/TextBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calibrate_description_alarm" >
            </TextView>

            <TextView
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dip"
                android:text="@string/calibrate_directions_alarm" >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/screenTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/TextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/calibrate_title_force_screen_on" >
            </TextView>

            <TextView
                style="@style/TextBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calibrate_description_force_screen_on" >
            </TextView>

            <TextView
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dip"
                android:text="@string/calibrate_directions_force_screen_on" >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/TextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/calibrate_title_results" >
            </TextView>

            <TextView
                style="@style/TextHeaderTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calibrate_title_alarm" >
            </TextView>

            <TextView
                android:id="@+id/alarmResult"
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dip" >
            </TextView>

            <TextView
                style="@style/TextHeaderTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calibrate_title_force_screen_on" >
            </TextView>

            <TextView
                android:id="@+id/screenResult"
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dip" >
            </TextView>
        </LinearLayout>
    </ScrollView>

</com.androsz.electricsleep.widget.ViewFlipperBugfix>