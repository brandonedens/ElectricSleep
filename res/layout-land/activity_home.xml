<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/home_container" android:layout_height="match_parent"
	android:layout_width="match_parent" android:background="@drawable/gradient_background_vert">

	<LinearLayout
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/home_button_container" android:layout_alignParentLeft="true" android:orientation="vertical" android:layout_centerVertical="true">
		<Button style="@style/HomeButton" android:id="@+id/home_btn_sleep"
			android:onClick="onSleepClick" android:drawableTop="@drawable/home_btn_sleep"
			android:text="@string/title_sleep" android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<Button android:id="@+id/home_btn_history" style="@style/HomeButton"
			android:onClick="onHistoryClick" android:text="@string/title_history"
			android:drawableTop="@drawable/home_btn_history"
			android:layout_width="wrap_content" android:layout_height="match_parent"/>
	</LinearLayout>
	
	<TextView android:text="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/Title" android:layout_toRightOf="@+id/home_button_container"></TextView><com.androsz.electricsleep.ui.widget.SleepChartReView
		android:id="@+id/home_sleep_chart" android:layout_width="match_parent"
		android:layout_height="match_parent" android:layout_margin="4dip" android:layout_toRightOf="@+id/home_button_container"/>


</RelativeLayout>