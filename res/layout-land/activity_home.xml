<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent" android:layout_width="match_parent"
	android:background="@drawable/gradient_background_vert">
	<LinearLayout android:layout_width="match_parent"
		android:orientation="vertical" android:layout_gravity="center_vertical|center_horizontal"
		android:layout_height="wrap_content" android:layout_margin="4dip"
		android:background="@drawable/gradient_background_horiz">

		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:gravity="center_vertical|center_horizontal"
			android:background="@color/background_transparent_darken"
			android:layout_marginLeft="4dip" android:layout_marginRight="4dip"
			android:layout_marginTop="4dip">
			<Button style="@style/HomeButton" android:id="@+id/home_btn_sleep"
				android:onClick="onSleepClick" android:drawableTop="@drawable/home_btn_sleep"
				android:text="@string/title_sleep" />
			<Button style="@style/HomeButton" android:id="@+id/home_btn_calibrate"
				android:drawableTop="@drawable/home_btn_calibrate" android:onClick="onCalibrateClick"
				android:text="@string/title_calibrate" />
			<Button android:id="@+id/home_btn_alarms" style="@style/HomeButton"
				android:onClick="onAlarmsClick" android:text="@string/title_alarms"
				android:drawableTop="@drawable/home_btn_alarms" />
		</LinearLayout>

		<LinearLayout android:orientation="horizontal"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:gravity="center_vertical|center_horizontal"
			android:background="@color/background_transparent_darken"
			android:layout_margin="4dip">

			<Button android:id="@+id/home_btn_settings" style="@style/HomeButton"
				android:onClick="onSettingsClick" android:text="@string/title_settings"
				android:drawableTop="@drawable/home_btn_settings" />
			<Button android:id="@+id/home_btn_history" style="@style/HomeButton"
				android:onClick="onHistoryClick" android:text="@string/title_history"
				android:drawableTop="@drawable/home_btn_history" />
			<Button android:id="@+id/home_btn_cloud" style="@style/HomeButton"
				android:onClick="onCloudClick" android:text="@string/title_cloud"
				android:drawableTop="@drawable/home_btn_cloud" />
		</LinearLayout>


	</LinearLayout>

</LinearLayout>
